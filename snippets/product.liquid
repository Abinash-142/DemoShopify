<div class="w-full py-6 px-3">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
        <a href="{{ product_items.url }}">
            {% if product_items.featured_image %}
                <div class="h-80 overflow-hidden">
                    <img class="w-full h-full object-cover transition dutarion-1000 ease-in-out hover:scale-105 transform" src="{{ product_items.featured_image | img_url: 'medium' }}" alt="{{ product_items.featured_image.alt }}">
                </div>
                
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
            {% endif %}
        </a>
        
        <div class="flex flex-col p-4">
            <span class="text-sm text-gray-400">{{ product_items.vendor }}</span>

            <a href="{{ product_items.url }}" class="text-gray-700 uppercase font-medium">{{ product_items.title }}</a>

            <p class="text-gray-500">{{ product_items.price | money }}</p>
        </div>
        
    </div>
</div>